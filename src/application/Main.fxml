<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="119.0" prefWidth="310.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Main">
   <children>
      <Label layoutX="15.0" layoutY="12.0" text="MEOWS">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Label>
      <Button fx:id="startButton" layoutX="13.0" layoutY="38.0" mnemonicParsing="false" onAction="#startAction" prefHeight="22.0" prefWidth="143.0" text="Start">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Button>
      <Label fx:id="timerLabel" layoutX="60.0" layoutY="12.0" text="Welcome, press start!">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Label>
      <Label layoutX="16.0" layoutY="68.0" text="Meows has been active for: ">
         <font>
            <Font name="Calibri" size="12.0" />
         </font></Label>
      <Label fx:id="counterLabel" layoutX="170.0" layoutY="21.0" text="0M">
         <font>
            <Font size="48.0" />
         </font></Label>

      <ProgressIndicator fx:id="progressIndicator" layoutX="160.0" layoutY="32.0" opacity="0.0" prefHeight="73.0" prefWidth="67.0" visible="false">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
         <effect>
            <Blend />
         </effect></ProgressIndicator>
      <Hyperlink fx:id="hyperlink" layoutX="11.0" layoutY="85.0" onAction="#copyToClipboard" text="About MEOWS" />
   </children>
</AnchorPane>
